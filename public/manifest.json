{
  "manifest_version": 3,
  "name": "CIRRO Dark Mode",
  "description": "Dark mode theme for CIRRO app with styling for improved readability and reduced eye strain",
  "version": "1.0.1",
  "author": "JayRich",
  "homepage_url": "https://github.com/jayrichh/cirro-tools",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "Toggle CIRRO Dark Mode"
  },

  "content_scripts": [
    {
      "matches": ["https://app.cirro.live/*"],
      "js": ["js/vendor.js", "js/content_script.js"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://app.cirro.live/*",
    "http://localhost/*"
  ]
}
